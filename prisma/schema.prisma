generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid()) @db.Uuid
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  email      String   @unique
  name       String?
  password   String
  role       Role     @default(USER)
  is_active  Boolean  @default(true)
  orders     Order[]

  @@map("users")
}

model Order {
  id         String   @id @default(cuid()) @db.Uuid
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  order_status       OrderStatus        @default(PENDING)
  email_status       NotificationStatus
  telegram_status    NotificationStatus
  payment_status     PaymentStatus
  payment_method     PaymentMethod
  promo_code         String?
  order_reservations OrderReservation[]

  user_id String @db.Uuid
  user    User   @relation(fields: [user_id], references: [id])

  @@map("orders")
}

model OrderReservation {
  id                 Int                @id @default(autoincrement())
  reservation_id     String
  reservation_type   String
  date               DateTime
  time               String
  reservation_prices ReservationPrice[]

  order_id String @db.Uuid
  order    Order  @relation(fields: [order_id], references: [id])

  @@map("order_reservations")
}

model ReservationPrice {
  id             Int    @id @default(autoincrement())
  price_type     String
  base_price     Int
  current_price  Int
  amount_persons Int

  order_reservation_id Int
  order_reservation    OrderReservation @relation(fields: [order_reservation_id], references: [id])

  @@map("reservation_prices")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  PROCESSING
  RETURNED
}

enum NotificationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  CANCELLED
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CASH
  CARD
  INSTALLMENT_PAYMENT
}
