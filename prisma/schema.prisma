generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid()) @db.Uuid
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  email      String   @unique
  name       String?
  password   String
  role       Role     @default(USER)
  is_active  Boolean  @default(true)
  orders     Order[]

  @@map("users")
}

model Order {
  id         String   @id @default(cuid()) @db.Uuid
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  order_status    OrderStatus        @default(PENDING)
  email_status    NotificationStatus
  telegram_status NotificationStatus
  payment_status  PaymentStatus
  payment_method  PaymentMethod
  promocode       String?
  order_services  OrderService[]

  user_id String @db.Uuid
  user    User   @relation(fields: [user_id], references: [id])

  @@map("orders")
}

model OrderService {
  id             Int            @id @default(autoincrement())
  service_id     String
  service_type   String
  date           DateTime
  time           String
  service_prices ServicePrice[]

  order_id String @db.Uuid
  order    Order  @relation(fields: [order_id], references: [id])

  @@map("order_services")
}

model ServicePrice {
  id           Int    @id @default(autoincrement())
  price_type   String
  base_price   Int
  actual_price Int

  order_service_id Int
  order_service    OrderService @relation(fields: [order_service_id], references: [id])

  @@map("service_prices")
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  PROCESSING
  RETURNED
}

enum NotificationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  CANCELLED
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CASH
  CARD
  INSTALLMENT_PAYMENT
}
